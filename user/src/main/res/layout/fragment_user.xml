<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tvNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户姓名：" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvNameTitle"
        tools:text="user_zf" />

    <TextView
        android:id="@+id/tvAgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameTitle"
        android:layout_marginTop="10dp"
        android:text="用户年龄：" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvAgeTitle"
        android:layout_toRightOf="@id/tvAgeTitle"
        tools:text="26" />

    <TextView
        android:id="@+id/tvHobbyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAgeTitle"
        android:layout_marginTop="10dp"
        android:text="用户兴趣：" />

    <TextView
        android:id="@+id/tvHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvHobbyTitle"
        android:layout_toRightOf="@id/tvHobbyTitle"
        tools:text="跑步、羽毛球" />

    <Button
        android:id="@+id/tvGotoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHobbyTitle"
        android:layout_marginTop="10dp"
        android:text="回到主页" />

</RelativeLayout>