<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rounded_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_builder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/ui_text_2"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="标题" />

        <FrameLayout
            android:id="@+id/fl_builder_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_builder_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:ellipsize="end"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="3dp"
            android:maxLines="15"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/ui_text_3"
            android:textSize="15dp"
            tools:text="只有内容的只有内容的只有内容的只有内容的SimpleAlterDialog" />

        <View
            android:id="@+id/v_builder_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ui_divider_primary" />

        <include
            layout="@layout/dialog_button_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>
</RelativeLayout>